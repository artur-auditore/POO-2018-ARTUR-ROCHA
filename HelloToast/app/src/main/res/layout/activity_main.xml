<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:onClick="toast"
            android:id="@+id/button_toast"
            android:text="@string/toast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:onClick="incrementar"
            android:id="@+id/buttom_count2"
            android:text="@string/incrementar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/show_count" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_numero" app:layout_constraintVertical_bias="0.785"/>

    <Button
            android:onClick="decrementar"
            android:id="@+id/buttom_count"
            android:text="@string/decrementar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"/>


    <TextView
            android:id="@+id/show_count"
            android:layout_width="0dp"
            android:layout_height="257dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="160sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttom_count" app:layout_constraintHorizontal_bias="0.0"
    />
    <EditText
            android:id="@+id/edit_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/show_count" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_toast" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.033"/>
    <TextView
            android:textSize="25sp"
            android:text="Incremento:"
            android:textColor="#000000"
            android:layout_width="138dp"
            android:layout_height="41dp"
            android:id="@+id/textView" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/show_count" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_toast" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.025"/>

</android.support.constraint.ConstraintLayout>